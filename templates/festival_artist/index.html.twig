{% extends 'base.html.twig' %}

{% block title %}Festival - Artist Connections{% endblock %}

{% block body %}
    <div class="container mt-4 text-center">
        <h2 class="mb-4">Festival - Artist</h2>

        <div class="d-flex justify-content-center gap-3 flex-wrap mb-4">
            {% for conn in connections %}
                <div class="card text-start shadow-sm" style="background-color: #cce5ff; min-width: 250px; max-width: 300px; border-radius: 10px;">
                    <div class="card-body">
                        <p class="card-text mb-0">
                            <strong>Festival:</strong>
                            <a href="{{ path('festival_view', {id: conn.festival.id}) }}" class="text-decoration-none text-primary">
                                {{ conn.festival.name }}
                            </a>
                        </p>
                        <p class="card-text mb-0">
                            <strong>Artist:</strong>
                            <a href="{{ path('artist_view', {id: conn.artist.id}) }}" class="text-decoration-none text-primary">
                                {{ conn.artist.name }}
                            </a>
                        </p>
                        <small class="text-muted">Festival ID: {{ conn.festival.id }}, Artist ID: {{ conn.artist.id }}</small>
                    </div>
                </div>
            {% else %}
                <p>Nu există conexiuni între festivaluri și artiști.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
