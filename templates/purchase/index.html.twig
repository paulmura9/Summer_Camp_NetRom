{% extends 'base.html.twig' %}

{% block title %}Purchases{% endblock %}

{% block body %}
    <div class="container mt-4 text-center">
        <h2 class="mb-4">Purchases</h2>

        <div class="d-flex justify-content-center gap-3 flex-wrap mb-4">
            {% for purchase in purchases %}
                <div class="p-3 text-start shadow-sm" style="background-color: #bde0fe; border-radius: 10px; min-width: 220px;">
                    <div><strong>ID:</strong> {{ purchase.id }}</div>
                    <div>
                        <strong>User:</strong>
                        <a href="{{ path('user_view', { id: purchase.user.id }) }}" style="text-decoration: none; color: #004085;">
                            {{ purchase.user.id }} - {{ purchase.user.email }}
                        </a>
                    </div>
                    <div>
                        <strong>Festival:</strong>
                        <a href="{{ path('festival_view', { id: purchase.festival.id }) }}" style="text-decoration: none; color: #004085;">
                            {{ purchase.festival.id }} - {{ purchase.festival.name }}
                        </a>
                    </div>
                </div>
            {% else %}
                <p>Nu există cumpărături.</p>
            {% endfor %}
        </div>

        <div class="pagination justify-content-center">
            {{ knp_pagination_render(purchases) }}
        </div>
    </div>
{% endblock %}
