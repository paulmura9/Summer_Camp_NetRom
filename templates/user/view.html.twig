{% extends 'base.html.twig' %}

{% block title %}User - {{ user.email }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        html, body {
            background-color: #99dab0;
            font-family: 'Segoe UI', sans-serif;
        }

        .user-card {
            background-color: #cec4ec;
            padding: 2rem;
            border-radius: 1rem;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            max-width: 600px;
            margin: 4rem auto;
        }

        .user-card h2 {
            color: #4a0072;
            font-weight: bold;
            margin-bottom: 1rem;
        }

        .form-group {
            text-align: left;
            margin-bottom: 1rem;
        }

        label {
            font-weight: bold;
            display: block;
            margin-bottom: 0.25rem;
        }

        .form-control {
            width: 100%;
            padding: 0.4rem;
            font-size: 1.1rem;
            border-radius: 0.4rem;
            border: 1px solid #ced4da;
            background-color: #e5d8f8;
            color: #4a0072;
        }

        .form-control[disabled] {
            opacity: 0.7;
            cursor: not-allowed;
        }

        .btn-success {
            background-color: #218838;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
            color: white;
            margin-top: 1rem;
        }

        .btn-success:hover {
            background-color: #1e7e34;
        }

        .edit-btn {
            background-color: #6f42c1;
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
            margin-top: 1rem;
            text-decoration: none;
            display: inline-block;
        }

        .edit-btn:hover {
            background-color: #5936a3;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="user-card text-center">
        <h2>{{ details.name }}</h2>

        {% set disableAttr = app.request.query.get('edit') ? {} : {'disabled': 'disabled'} %}

        {{ form_start(form) }}

        <div class="form-group">
            <label>Email:</label>
            <input type="text" class="form-control" value="{{ user.email }}" disabled>
        </div>

        <div class="form-group">
            <label>Role:</label>
            <input type="text" class="form-control" value="{{ user.roles[0] }}" disabled>
        </div>

        <div class="form-group">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {
                attr: disableAttr|merge({ 'class': 'form-control' })
            }) }}
        </div>

        <div class="form-group">
            {{ form_label(form.age) }}
            {{ form_widget(form.age, {
                attr: disableAttr|merge({ 'class': 'form-control' })
            }) }}
        </div>

        {% if app.request.query.get('edit') %}
            <button type="submit" class="btn btn-success">Apply Settings</button>
        {% else %}
            <a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'edit': 1})) }}" class="edit-btn">
                Edit Account Details
            </a>
        {% endif %}

        {{ form_end(form) }}
    </div>
{% endblock %}
