{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        html, body {
            background-color: #99dab0;
            font-family: 'Segoe UI', sans-serif;
        }

        h1 {
            color: #218838;
            font-weight: bold;
        }

        .user-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 2rem;
            padding: 2rem;
            justify-items: center;
        }

        .user-card {
            background-color: #cec4ec;
            padding: 1.5rem;
            border-radius: 1rem;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            width: 100%;
            max-width: 300px;
            text-align: center;
            transition: transform 0.25s ease, box-shadow 0.25s ease;
        }

        .user-card:hover {
            transform: scale(1.05);
            box-shadow: 0 0 20px rgba(0,0,0,0.2);
        }

        .user-email {
            color: #4a0072;
            font-weight: bold;
            font-size: 1.1rem;
            margin-bottom: 0.4rem;
            text-decoration: none;
            display: block;
        }

        .user-name {
            font-size: 1rem;
            color: #333;
            margin-bottom: 1rem;
        }

        .btn-success {
            background-color: #218838;
            border-color: #1e7e34;
            border-radius: 0.4rem;
            color: white;
            padding: 0.4rem 0.8rem;
            text-decoration: none;
        }

        .btn-success:hover {
            background-color: #1e7e34;
        }

        .btn-create {
            background-color: #0a5c1d;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 0.5rem;
            margin-top: 1.5rem;
            display: inline-flex;
            align-items: center;
            gap: 0.4rem;
        }

        .btn-create:hover {
            background-color: #1e7e34;
        }

        .pagination {
            margin-top: 2rem;
        }

        .pagination li a,
        .pagination li span {
            background-color: #e5d8f8;
            color: #4a0072;
            border: 1px solid #bfa0e0;
            padding: 0.5rem 0.75rem;
            margin: 0 2px;
            border-radius: 0.4rem;
            text-decoration: none;
        }

        .pagination li.active span,
        .pagination li a:hover {
            background-color: #6f42c1;
            color: white;
            border-color: #5936a3;
        }

        .pagination li.disabled span {
            background-color: #ddd;
            color: #999;
            border-color: #ccc;
        }
        .btn-back {
            background-color: #6f42c1;
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            text-decoration: none;
            font-weight: 500;
        }

        .btn-back:hover {
            background-color: #5936a3;
            text-decoration: none;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-4 text-center">
        <h1 class="mb-4">
            Users
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor"
                 class="bi bi-person-circle svg-icon" viewBox="0 0 16 16">
                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0"/>
                <path fill-rule="evenodd"
                      d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468
                                  11.37C3.242 11.226 4.805 10 8 10s4.757 1.225
                                  5.468 2.37A7 7 0 0 0 8 1"/>
            </svg>
        </h1>

        <div class="user-grid">
            {% for user in users %}
                {% if user.id != app.user.id %}
                <div class="user-card">
                    <a href="{{ path('user_view', { id: user.id }) }}" class="user-email">
                        {{ user.email }}
                    </a>
                    <div class="user-name">
                        {{ user.details.name ?? 'No name' }}
                    </div>
                    <a href="{{ path('user_view', { id: user.id }) }}" class="btn btn-success">View</a>
                </div>
                {% endif %}
            {% else %}
                <p>No users.</p>
            {% endfor %}
        </div>

        <div class="pagination justify-content-center">
            {{ knp_pagination_render(users) }}
        </div>

            <div class="text-center">
                <a href="{{ path('app_register') }}" class="btn btn-create">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                         class="bi bi-plus" viewBox="0 0 16 16">
                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
                    </svg>
                    Register new User
                </a>
            </div>

        <div class="text-center mt-4">
            <a href="{{ path('showtime') }}" class="btn btn-back">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5"/>
                </svg>
                Back
            </a>
        </div>

    </div>
{% endblock %}
{% block javascripts %}
    <script>
        if (!sessionStorage.getItem('hasRefreshed')) {
            sessionStorage.setItem('hasRefreshed', 'true');
            location.reload();
        }
    </script>
{% endblock %}
