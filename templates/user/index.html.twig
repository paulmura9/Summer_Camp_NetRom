{% extends 'base.html.twig' %}

{% block title %}Utilizatori{% endblock %}

{% block body %}
    <div class="container mt-4 text-center">
        <h2 class="mb-4">Users</h2>

        <div id="user-container" class="d-flex justify-content-center gap-3 flex-wrap mb-4"></div>

        <nav>
            <ul class="pagination justify-content-center">
                <li class="page-item">
                    <button class="page-link" onclick="previousPage()" id="prevBtn">Previous</button>
                </li>
                <li class="page-item">
                    <button class="page-link" onclick="nextPage()" id="nextBtn">Next</button>
                </li>
            </ul>
        </nav>
    </div>

    <script>
        const users = {{ users|json_encode|raw }};
        const container = document.getElementById('user-container');
        let currentIndex = 0;
        const pageSize = 10;

        function renderPage() {
            container.innerHTML = '';
            const pageUsers = users.slice(currentIndex, currentIndex + pageSize);
            pageUsers.forEach(u => {
                const card = document.createElement('div');
                card.className = 'p-2 text-center';
                card.style.backgroundColor = '#cce5ff';
                card.style.borderRadius = '10px';
                card.style.minWidth = '100px';
                card.style.display = 'inline-block';
                card.style.margin = '0 5px';

                card.innerHTML = `
                <div style="font-size: 0.9rem;">${u.id}</div>
                <div style="font-size: 1rem; font-weight: bold;">
                    <a href="/user/${u.id}" style="color: #004085; text-decoration: none;">
                        ${u.email}
                    </a>
                </div>
            `;
                container.appendChild(card);
            });

            document.getElementById('prevBtn').disabled = currentIndex <= 0;
            document.getElementById('nextBtn').disabled = currentIndex + pageSize >= users.length;
        }

        function previousPage() {
            if (currentIndex > 0) {
                currentIndex--;
                renderPage();
            }
        }

        function nextPage() {
            if (currentIndex + pageSize < users.length) {
                currentIndex++;
                renderPage();
            }
        }

        window.addEventListener('pageshow', function () {
            renderPage();
        });
    </script>
{% endblock %}
