{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    <div class="container mt-4 text-center">
        <h2 class="mb-4">Users</h2>

        <div class="d-flex justify-content-center gap-3 flex-wrap mb-4">
            {% for user in users %}
                <div class="p-2 text-center" style="background-color: #cce5ff; border-radius: 10px; min-width: 100px; display: inline-block; margin: 0 5px;">
                    <div style="font-size: 0.9rem;">{{ user.id }}</div>
                    <div style="font-size: 1rem; font-weight: bold;">
                        <a href="{{ path('user_view', {id: user.id}) }}" style="color: #004085; text-decoration: none;">
                            {{ user.email }}
                        </a>
                    </div>
                </div>
            {% else %}
                <p>Nu existÄƒ utilizatori.</p>
            {% endfor %}
        </div>

        <div class="pagination justify-content-center">
            {{ knp_pagination_render(users) }}
        </div>
    </div>
{% endblock %}
