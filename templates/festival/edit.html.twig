{% extends 'base.html.twig' %}

{% block title %}Edit Festival - {{ festival.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        html, body {
            background-color: #99dab0;
            font-family: 'Segoe UI', sans-serif;
        }

        h2 {
            color: #4a0072;
            font-weight: bold;
        }

        .form-card {
            background-color: #cec4ec;
            padding: 2rem;
            border-radius: 1rem;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            max-width: 700px;
            margin: 4rem auto;
        }

        .badge-artist {
            background-color: #17a2b8;
            color: white;
            padding: 0.4rem 0.75rem;
            border-radius: 0.75rem;
            margin: 0.25rem;
            display: inline-block;
            font-weight: 500;
            text-decoration: none;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

        .badge-artist button {
            background: none;
            border: none;
            color: white;
            font-size: 1rem;
            margin-left: 0.5rem;
            cursor: pointer;
        }

        .badge-artist:hover {
            transform: scale(1.05);
            box-shadow: 0 0 10px rgba(0,0,0,0.2);
        }

        .add-artist-select {
            max-width: 300px;
            margin-top: 1rem;
        }

        .btn-save {
            background-color: #218838;
            border-color: #1e7e34;
            color: white;
        }

        .btn-save:hover {
            background-color: #1e7e34;
        }

        .btn-back {
            background-color: #6f42c1;
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            text-decoration: none;
            font-weight: 500;
        }

        .btn-back:hover {
            background-color: #5936a3;
            text-decoration: none;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="form-card">
        <h2 class="text-center mb-4">Edit Festival</h2>

        {{ form_start(form) }}

        {% if not form.vars.valid %}
            <div class="alert alert-danger">Please correct the errors below.</div>
        {% endif %}

        {% for field in form %}
            {% if field.vars.name != 'artist' and field.vars.name != 'availableArtists' %}
                <div class="mb-3">
                    {{ form_label(field) }}
                    {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(field) }}
                </div>
            {% endif %}
        {% endfor %}

        {% if linked_artists is not empty %}
            <div class="mt-4">
                <h5>Featured Artists</h5>
                <div class="d-flex flex-wrap">
                    {% for fa in linked_artists %}
                        <span class="badge-artist">
                            {{ fa.artist.name }}
                            <input type="hidden" name="remove_artists[]" value="{{ fa.artist.id }}">
                            <button type="button" onclick="this.parentElement.remove();">&times;</button>
                        </span>
                    {% endfor %}
                </div>
            </div>
        {% endif %}

        <div class="mt-4">
            <h5>Add Artist</h5>
            <select name="add_artists[]" class="form-select add-artist-select">
                <option value="">-- Select artist to add --</option>
                {% for artist in available_artists %}
                    <option value="{{ artist.id }}">{{ artist.name }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-save">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-floppy" viewBox="0 0 16 16">
                    <path d="M11 2H9v3h2z"/>
                    <path d="M1.5 0h11.586a1.5 1.5 0 0 1 1.06.44l1.415 1.414A1.5 1.5 0 0 1 16 2.914V14.5a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 14.5v-13A1.5 1.5 0 0 1 1.5 0M1 1.5v13a.5.5 0 0 0 .5.5H2v-4.5A1.5 1.5 0 0 1 3.5 9h9a1.5 1.5 0 0 1 1.5 1.5V15h.5a.5.5 0 0 0 .5-.5V2.914a.5.5 0 0 0-.146-.353l-1.415-1.415A.5.5 0 0 0 13.086 1H13v4.5A1.5 1.5 0 0 1 11.5 7h-7A1.5 1.5 0 0 1 3 5.5V1H1.5a.5.5 0 0 0-.5.5m3 4a.5.5 0 0 0 .5.5h7a.5.5 0 0 0 .5-.5V1H4zM3 15h10v-4.5a.5.5 0 0 0-.5-.5h-9a.5.5 0 0 0-.5.5z"/>
                </svg>
                Apply changes
            </button>

            <a href="{{ path('festival_view', { id: festival.id }) }}" class="btn btn-back">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5"/>
                </svg>
                Back
            </a>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
