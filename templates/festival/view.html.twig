{% extends 'base.html.twig' %}

{% block title %}Festival - {{ festival.name }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h2 class="mb-4 text-primary-emphasis">{{ festival.name }}</h2>

        <ul class="list-group">
            <li class="list-group-item"><strong>ID:</strong> {{ festival.id }}</li>
            <li class="list-group-item"><strong>Location:</strong> {{ festival.location }}</li>
            <li class="list-group-item"><strong>Start Date:</strong> {{ festival.startDate|date('Y-m-d') }}</li>
            <li class="list-group-item"><strong>End Date:</strong> {{ festival.endDate|date('Y-m-d') }}</li>
            <li class="list-group-item"><strong>Price:</strong> {{ festival.price }} RON</li>
        </ul>

        <h4 class="mt-4">Featured Artists</h4>
        {% if festival.festivalArtists|length > 0 %}
            <div class="d-flex flex-wrap gap-2">
                {% for fa in festival.festivalArtists %}
                    {% if fa.artist %}
                        <span class="badge text-bg-info px-3 py-2">
                    {{ fa.artist.name }} - {{ fa.artist.musicalGenre }}
                </span>
                    {% endif %}
                {% endfor %}
            </div>
        {% else %}
            <p class="text-muted">No featured artists yet</p>
        {% endif %}

        <div class="d-flex gap-2 mt-3">
            <a href="{{ path('festival_edit', { id: festival.id }) }}" class="btn btn-warning">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
                    <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001m-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708z"/>
                </svg>
                Edit
            </a>
        <form method="get" action="{{ path('festival_delete', { id: festival.id }) }}">
            <button class="btn btn-danger" onclick="return confirm('Are you sure?');">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                </svg>
                Delete
            </button>
        </form>
        </div>

        <a href="#" onclick="window.location.href='{{ path('festivals_list') }}'; return false;" class="btn btn-secondary mt-3">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5"/>
            </svg>
            Back
        </a>

    </div>
{% endblock %}
