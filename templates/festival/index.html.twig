{% extends 'base.html.twig' %}

{% block title %}Festivals{% endblock %}

{% block body %}
    <div class="container mt-4 text-center">
        <h2 class="mb-4">Festivals</h2>

        <div class="d-flex justify-content-center gap-3 flex-wrap mb-4">
            {% for festival in festivals %}
                <div class="p-2 text-center" style="background-color: #bde0fe; border-radius: 10px; min-width: 60px; display: inline-block; margin: 0 5px;">
                    <div style="font-size: 0.9rem;">{{ festival.id }}</div>
                    <div style="font-size: 1rem; font-weight: bold;">
                        <a href="{{ path('festival_view', {id: festival.id}) }}" style="color: #004085; text-decoration: none;">
                            {{ festival.name }}
                        </a>
                    </div>
                </div>
            {% else %}
                <p>Nu existÄƒ festivaluri.</p>
            {% endfor %}
        </div>

        <div class="pagination justify-content-center">
            {{ knp_pagination_render(festivals) }}
        </div>
    </div>
{% endblock %}
