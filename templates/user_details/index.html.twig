{% extends 'base.html.twig' %}

{% block title %}Users Details{% endblock %}

{% block body %}
    <div class="container mt-4 text-center">
        <h2 class="mb-4">Users Details</h2>

        <div class="d-flex justify-content-center gap-3 flex-wrap mb-4">
            {% for detail in details %}
                <div class="p-2 text-center" style="background-color: #e3f2fd; border-radius: 10px; min-width: 120px; display: inline-block; margin: 0 5px;">
                    <div style="font-size: 0.9rem;">ID: {{ detail.user_id }}</div>
                    <div style="font-size: 1rem; font-weight: bold;">
                        <a href="{{ path('user_details_view', { id: detail.user_id }) }}" style="color: #0d6efd; text-decoration: none;">
                            {{ detail.name }}
                        </a>
                    </div>
                    <div style="font-size: 0.9rem;">Age: {{ detail.age }}</div>
                </div>
            {% else %}
                <p>Nu existÄƒ detalii despre utilizatori.</p>
            {% endfor %}
        </div>

        <div class="pagination justify-content-center">
            {{ knp_pagination_render(details) }}
        </div>
    </div>
{% endblock %}
