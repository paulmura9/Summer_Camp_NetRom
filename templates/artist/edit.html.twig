{% extends 'base.html.twig' %}

{% block title %}Edit Artist - {{ artist.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        html, body {
            background-color: #99dab0;
            font-family: 'Segoe UI', sans-serif;
        }

        .edit-artist-card {
            background-color: #cec4ec;
            padding: 2rem;
            border-radius: 1rem;
            max-width: 600px;
            margin: 3rem auto;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        h2 {
            color: #4a0072;
            font-weight: bold;
            margin-bottom: 1.5rem;
        }

        .form-control {
            width: 100%;
            padding: 0.5rem;
            font-size: 1.05rem;
            border-radius: 0.5rem;
            border: 1px solid #ced4da;
            background-color: #e5d8f8;
            color: #4a0072;
        }

        .btn-success {
            background-color: #218838;
            border: none;
            padding: 0.5rem 1.2rem;
            border-radius: 0.5rem;
            color: white;
            font-weight: 500;
        }

        .btn-success:hover {
            background-color: #1e7e34;
        }

        .btn-back {
            background-color: #6f42c1;
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            text-decoration: none;
            font-weight: 500;
        }

        .btn-back:hover {
            background-color: #5936a3;
            text-decoration: none;
        }
        .actions {
            display: flex;
            justify-content: space-between;
            margin-top: 2rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="edit-artist-card">
        <h2 class="text-center">Edit Artist</h2>

        {{ form_start(form) }}

        {% if not form.vars.valid %}
            <div class="alert alert-danger">Please fix the errors below.</div>
        {% endif %}

        <div class="mb-3">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.name) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.musical_genre) }}
            {{ form_widget(form.musical_genre, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.musical_genre) }}
        </div>

        <div class="actions">
            <a href="{{ path('artist_view', { id: artist.id }) }}" class="btn-back">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5"/>
                </svg>
                Back
            </a>

            <button type="submit" class="btn btn-success">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bookmark-check-fill" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M2 15.5V2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.74.439L8 13.069l-5.26 2.87A.5.5 0 0 1 2 15.5m8.854-9.646a.5.5 0 0 0-.708-.708L7.5 7.793 6.354 6.646a.5.5 0 1 0-.708.708l1.5 1.5a.5.5 0 0 0 .708 0z"/>
                </svg>
                Apply changes
            </button>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        if (!sessionStorage.getItem('hasRefreshed')) {
            sessionStorage.setItem('hasRefreshed', 'true');
            location.reload();
        }
    </script>
{% endblock %}
